generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String?
  email      String?  @unique
  password   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  isAdmin    Boolean @default(false)

  tasks      Task[]   // ðŸ‘ˆ RelaciÃ³n 1:N
}

model Task {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  
  userOwnerId String
  userOwner   User     @relation(fields: [userOwnerId], references: [id]) // ðŸ‘ˆ RelaciÃ³n
}

